<h2>
  Edit Post
</h2>
<form class="edit-post-form">

  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="post-title"
      value="{{post.title}}"
      aria-describedby="postHelper"
    />
    <div id="postHelper" class="form-text">Posted by you on
      {{format_date post.created_at}}
      |
      {{post.comments.length}}
      {{format_plural "comment" post.comments.length}}</div>
  </div>
  <div class="mb-3">
    <label for="post" class="form-label">Post</label>
    <textarea
      class="form-control"
      id="post"
      rows="3"
      name="post-text"
    >{{post.post_text}}</textarea>
  </div>

  {{! <button type="submit">Save Changes</button> }}
  <button type="submit" class="btn btn-primary">Save Changes</button>

  {{! <button type="button" class="delete-post-btn">Delete Post</button> }}
  <button type="button" class="delete-post-btn btn btn-danger">Delete Post</button>
</form>

